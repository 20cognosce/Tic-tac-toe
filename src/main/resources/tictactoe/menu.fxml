      <Button fx:id="PvPmodeButton" mnemonicParsing="false" onAction="#PvPmode" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: black; -fx-border-color: black;" text="Игра с другом" textFill="WHITE">
