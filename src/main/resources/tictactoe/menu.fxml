            <Font name="Cambria Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="SettingsButton" mnemonicParsing="false" onAction="#Settings" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: black;" text="Настройки" textFill="WHITE">
